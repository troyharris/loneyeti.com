<h1>Edit Post</h1>

<div class="yui-skin-sam">
<%= form_for :post, :url => { :action => :update, :id => @post.id }, :method => :put do |f| %>
<%= collection_select(:category, :id, @categories, :id, :name, options ={:prompt => "-Select a payment"}, :class =>"category") %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br/>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<script>
var myEditor = new YAHOO.widget.Editor('post_text', {
    height: '300px',
    width: '900px',
    dompath: true, //Turns on the bar at the bottom
    animate: true, //Animates the opening, closing and moving of Editor windows
    handleSubmit: true
});
myEditor.render();
</script>



<% end %>
</div>
